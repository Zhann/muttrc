# -*- Mode: muttrc -*-

# Caches
set header_cache='~/.mutt/.cache/headercache'
set message_cachedir='~/.mutt/.cache/messagecache'
set certificate_file='~/.mutt/.cache/certificates'

# My PGP Key config
set pgp_autosign=yes
set pgp_sign_as=0x589E26B5
set pgp_replyencrypt=yes

# HTML Rendering
auto_view text/html
